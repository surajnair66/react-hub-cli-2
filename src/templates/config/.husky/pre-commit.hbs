#!/bin/bash

CURRENT_BRANCH="$(git symbolic-ref --short HEAD 2>/dev/null)"

PROTECTED_BRANCH_REGEX='(release\/dev|release\/stag|release\/prod)'
BRANCH_NAME_REGEX='((feat|fix|docs|story|style|refactor|perf|test|chore|revert|wip|build|ci)\/)(#[0-9]{6}\/(([a-z]{2,}-?)){1,3})'

if [[ "$CURRENT_BRANCH" =~ $PROTECTED_BRANCH_REGEX ]]
then
    echo "You can't commit on protected branches..."
    exit 1
fi


if [[ "$CURRENT_BRANCH" = "main" ]]
then
    npx lint-staged
    exit 0
elif [[ ! "$CURRENT_BRANCH" =~ $BRANCH_NAME_REGEX ]]
then
    echo "Invalid branch name format.... ( FORMAT: {type}/#{proofhub-id}/{module} )"
    echo "Valid branch name examples: feat/#392813/auth, fix/#894624/user-crud, refactor/#972813/post-create-operation"
    exit 1
fi

npx lint-staged
exit 0
